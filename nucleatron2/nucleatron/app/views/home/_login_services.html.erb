<div id="login">
	<p><strong>To start transcribing, login using:</strong></p>
	<ul class="services">
		<li class=""><a class="icon twitter" href="<%= authentication_url(:twitter) %>" title="Twitter">Twitter</a></li>
		<li class=""><a class="icon facebook" href="<%= authentication_url(:facebook) %>" title="Facebook">Facebook</a></li>
		<li class=""><a class="icon google" href="<%= authentication_url(:google_oauth2) %>" title="Google">Google</a></li>
	</ul>

 	<p><strong>Are you a journalist who needs documents transcribed? Login through Document Cloud:</strong></p>
	<%= form_tag( '/auth/documentcloud',:method=>'post' ) do %>
		<%= text_field_tag(:login) %>
		<%= password_field_tag(:password) %>
		<input type="submit" value="Login">
	<% end %>
</div>